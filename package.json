{
  "name": "letta-opencode-plugin",
  "version": "0.2.0",
  "description": "MCP server enabling Letta agents to delegate tasks to OpenCode",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "letta-opencode-plugin": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "letta",
    "opencode",
    "ai",
    "agents"
  ],
  "author": "Oculair Media",
  "license": "MIT",
  "dependencies": {
    "@letta-ai/letta-client": "^0.0.68665",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@opencode-ai/sdk": "^1.0.204",
    "cors": "^2.8.5",
    "dotenv": "^17.1.0",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "matrix-bot-sdk": "^0.7.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.51.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "prettier --write"
    ]
  }
}
